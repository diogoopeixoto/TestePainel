@model PainelDeTarefas.Models.TarefasModel

<h1>Detalhes da Tarefa</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Descrição:
        </dt>
        <dd class="col-sm-10">
            @Model.Descricao
        </dd><dd class="col-sm-10">
            @Model.Responsavel
        </dd>
        <dt class="col-sm-2">
            Hora de Início:
        </dt>
        <dd class="col-sm-10">
            @Model.HoraInicio
        </dd>
        <dt class="col-sm-2">
            Hora Final Estimada:
        </dt>
        <dd class="col-sm-10">
            @Model.HoraFinalEstimada
        </dd>
        <dt class="col-sm-2">
            Status:
        </dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>
        <dt class="col-sm-2">
            Tempo Decorrido:
        </dt>
        <dd class="col-sm-10">
            @Model.TempoDecorrido
        </dd>
    </dl>
    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
        <a asp-action="Delete" asp-route-id="@Model.Id">Excluir</a> |
        <a asp-action="Index">Voltar para a lista de tarefas</a>
    </div>
</div>

