@model PainelDeTarefas.Models.TarefasModel

<h1>Cadastrar Tarefa</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Descricao">Descrição</label>
        <input asp-for="Descricao" class="form-control" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ResponsavelId">Responsável</label>
        <select asp-for="ResponsavelId" class="form-control">
            <option value="">Selecione um Responsável</option>
            @foreach (var funcionario in Model.ListaFuncionarios)
            {
                <option value="@funcionario.Id">@funcionario.Nome</option>
            }
        </select>
        <span asp-validation-for="ResponsavelId" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="HoraInicio" class="control-label">Data de Início</label>
        <input asp-for="HoraInicio" class="form-control" type="date" />
        <span asp-validation-for="HoraInicio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HoraFinalEstimada" class="control-label">Data Final Estimada</label>
        <input asp-for="HoraFinalEstimada" class="form-control" type="date" />
        <span asp-validation-for="HoraFinalEstimada" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status">Status</label>
        <select asp-for="Status" asp-items="Html.GetEnumSelectList<StatusTarefa>()" class="form-control"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TempoDecorrido">Tempo Decorrido</label>
        <input asp-for="TempoDecorrido" class="form-control" />
        <span asp-validation-for="TempoDecorrido" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Cadastrar" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index">Voltar para a lista de tarefas</a>
