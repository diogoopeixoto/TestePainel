@model PainelDeTarefas.Models.Funcionarios

<h1>Detalhes do Funcionário</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Nome:
        </dt>
        <dd class="col-sm-10">
            @Model.Nome
        </dd>
        <dt class="col-sm-2">
            Matrícula:
        </dt>
        <dd class="col-sm-10">
            @Model.Matricula
        </dd>
        <dt class="col-sm-2">
            TarefasAtribuidas:
        </dt>
        <dd class="col-sm-10">
            @Model.TarefasAtribuidas
        </dd>
    </dl>
    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
        <a asp-action="Delete" asp-route-id="@Model.Id">Excluir</a> |
        <a asp-action="Index">Voltar para a lista de funcionários</a>
    </div>
</div>
