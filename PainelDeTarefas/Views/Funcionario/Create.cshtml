@model PainelDeTarefas.Models.Funcionarios

<h1>Cadastrar Funcionário</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Matricula">Matrícula</label>
        <input asp-for="Matricula" class="form-control" />
        <span asp-validation-for="Matricula" class="text-danger"></span>
    </div><div class="form-group">
        <label asp-for="TarefasAtribuidas">TarefasAtribuidas</label>
        <input asp-for="TarefasAtribuidas" class="form-control" />
        <span asp-validation-for="TarefasAtribuidas" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Cadastrar" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index">Voltar para a lista de funcionários</a>



