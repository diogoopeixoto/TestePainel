@model PainelDeTarefas.Models.TarefasModel

<h1>Editar Tarefa</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Descricao">Descrição</label>
        <input asp-for="Descricao" class="form-control" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ResponsavelId">Responsável</label>
        <select id="ResponsavelId" name="ResponsavelId" class="form-control">
            <option value="">Selecione um Responsável</option>
            @foreach (var item in Model.ListaTarefas)
            {
                <option value="@item.Id">@item.Responsavel</option>
            }
        </select>
        <span asp-validation-for="ResponsavelId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HoraInicio">Hora de Início</label>
        <input asp-for="HoraInicio" class="form-control" />
        <span asp-validation-for="HoraInicio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HoraFinalEstimada">Hora Final Estimada</label>
        <input asp-for="HoraFinalEstimada" class="form-control" />
        <span asp-validation-for="HoraFinalEstimada" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status">Status</label>
        <select asp-for="Status" asp-items="Html.GetEnumSelectList<StatusTarefa>()" class="form-control"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TempoDecorrido">Tempo Decorrido</label>
        <input asp-for="TempoDecorrido" class="form-control" />
        <span asp-validation-for="TempoDecorrido" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index">Voltar para a lista de tarefas</a>
